{% extends "base.html.twig" %}
{% block title %}Gérer les biens {% endblock %}
{% block body %}
    <div class="container mt-4">
        {%  for message in app.flashes('success') %}
        <div class="alert alert-success">
             {{ message }}
        </div>
        {% endfor %}
    <h1>Gérer les options</h1>
    </div>
          <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
              <tbody>
              {% for option in options %}
                <tr>
                    <td>{{ option.name }}</td>
                    <td><a href="{{path('admin.option.edit',{id: option.id}) }}" class="btn btn-primary">Editer</a>
                        <form method="POST" style="display: inline-block;" action="{{ path('admin.option.delete', {id: option.id}) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ option.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form></td>
                </tr>
              {% endfor %}
              </tbody>
          </table>
    <div class="text-right">
        <a href="{{ path('admin.option.new') }}" class="btn btn-primary">Créer un bien</a>
    </div>
        </div>
    </div>
{% endblock %}